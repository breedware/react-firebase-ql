{
  "name": "react-firebase-ql",
  "version": "2.0.7",
  "description": "A React helper library that simplifies using Firebase with side effects and live queries.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "private": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/breedware/react-firebase-ql.git"
  },
  "keywords": [
    "react",
    "firebase",
    "hooks",
    "library",
    "firebase-ql",
    "firebase sql",
    "react-firebase"
  ],
  "author": "Breedware Limited",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18",
    "firebase-client-ql" : ">=4"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.26",
    "eslint": "^8.0.0",
    "rimraf": "^3.0.2",
    "tsup": "^6.7.0",
    "typescript": "^5.9.3",
    "vitest": "^0.30.1"
  }
}
