{
  "name": "react-firebase-ql",
  "version": "2.2.0",
  "description": "A React helper library that simplifies using Firebase with side effects and live queries.",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "esm", "src"],
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/breedware/react-firebase-ql.git"
  },
  "keywords": [
    "react", "firebase", "hooks", "library", "firebase-ql", "firebase sql", "react-firebase"
  ],
  "author": "Breedware Limited",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist esm",
    "prebuild": "npm run clean",
    "build:cjs": "tsc --module commonjs --declaration --outDir dist",
    "build:esm": "tsc --module esnext --declaration --outDir esm",
    "build": "npm run build:esm && npm run build:cjs",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.js"
  },
  "peerDependencies": {
    "react": ">=18",
    "firebase-client-ql": ">=4"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.26",
    "eslint": "^8.0.0",
    "rimraf": "^3.0.2",
    "tsup": "^6.7.0",
    "typescript": "^5.9.3",
    "vitest": "^0.30.1"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./esm/index.js"
    }
  }
}
